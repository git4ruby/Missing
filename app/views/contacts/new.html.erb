 <h1 id="page_title">Say Hello!</h1>

<div class="skinny_wrapper wrapper_padding">

  <%= form_for @contact, html: { multipart: true } do |f| %>

      <%= f.label :name %><br>
      <%= f.text_field :name, required: true %>

      <br>
      <br>


      <%= f.label :email %><br>
      <%= f.text_field :email, required: true %>

      <br>
      <br>

      <%= f.label :phone %><br>
      <%= f.text_field :phone, required: true %>

      <br>
      <br>


      <%= f.label :message %><br>
      <%= f.text_area :message, as: :text %>

      <br>
      <br>

      <%= f.label :images %><br>
      <%= f.file_field :images %>

      <br> <br>

      <div class="hidden">

        <%= f.label :nickname %><br>
        <%= f.text_field :nickname, hint: 'leave this field blank' %>

        <br>

      </div>

      <%= f.submit 'Send Message', class: "button" %>

  <% end %>

</div>
